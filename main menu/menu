import sys
import os

sys.path.append(os.path.dirname(os.path.dirname(os.path.abspath(__file__))))

from components.intit_components import *
from components.main import create_window
import tkinter as tk
# from PIL import Image, ImageTk
# from components.TextEditor import TextEditor
# from components.Button import Button

# _______ Encapsulation _______ #


description= (
    "Welcome to ResumAI - Your AI-Powered Hiring Assistant!\n\n"
    "At ResumAI, we harness the power of AI to transform the hiring process by evaluating resumes with \n\n"
    "precision and ensuring candidates' qualifications are assessed accurately and efficiently every time.\n\n"
    "Our intelligent assistant goes beyond resume analysis by generating tailored interview questions\n\n"
    "to help employers conduct insightful and effective interviews that uncover top talent.\n\n"
    "By focusing on skills, experience, and potential, ResumAI helps you build a stronger team\n\n"
    "while streamlining your hiring process and empowering confident, informed decisions.\n\n" 
)

def create_main_menu_window():
    WINDOW = tk.Tk() 
    
    main_menu_frame = create_window(WINDOW, window_name='ResumAI')
    #img_label, text_editor = create_elements(WINDOW, main_menu_frame, "PDF.png")
    null, img_label = create_image(main_menu_frame, "interview.png", width = 400, height = 400)
    
    upload_btn = create_button(main_menu_frame, "Upload", 12, 4)
    check_btn = create_button(main_menu_frame, "Create", 12, 4)
    
    upload_label = create_label(main_menu_frame, text="Upload A Resume For Grading", font=("Times New Roman", 22))
    build_label = create_label(main_menu_frame, text="Create Interview Questions For Applicant", font=("Times New Roman", 22))
    description_label = create_label(main_menu_frame, text=description, font=("Times New Roman", 14))
    title_label = create_label(main_menu_frame, text='ResumAI', font=("Times New Roman", 60))

    # Placement
    
    upload_btn.place(x=80, y=275)
    check_btn.place(x=80, y = 575)
    
    
    #text_editor.place(x=50, y= 450)
    img_label.place(x=600, y = 350)
    
    upload_label.place(x=10, y=200)
    description_label.place(x=500, y = 100)
    title_label.place(x=10, y=10)
    build_label.place(x=10, y= 500)
    # Start the main loop
    WINDOW.mainloop()

create_main_menu_window()